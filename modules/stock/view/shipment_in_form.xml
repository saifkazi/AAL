<form col="4" cursor="supplier">
    <label name="reference"/>
    <field name="reference"/>
    <label name="shipment_type"/>
    <field name="shipment_type"/>
    <label name="chaalan"/>
    <field name="chaalan"/>
    <!-- <label name="number"/>
    <field name="number"/> -->
    <label name="supplier"/>
    <field name="supplier"/>
    <label name="contact_address"/>
    <field name="contact_address"/>
    <label name="planned_date"/>
    <field name="planned_date"/>
    <label name="effective_date"/>
    <field name="effective_date"/>
    <label name="company"/>
    <field name="company"/>
    <label name="warehouse"/>
    <field name="warehouse"/>
    <label name="weighting"/>
    <field name="weighting"/>
     <label name="bulk"/>
    <field name="bulk" width="10"  colspan="1"/>
    <group col="-1" colspan="2" id="bulks">
        <label name="ms"/>
        <field name="ms" xexpand="0" width="25"/>
         <label name="gi"/>
        <field name="gi" xexpand="0" width="25"/>
         <label name="pvc"/>
        <field name="pvc" xexpand="0" width="25"/>
        <newline/>
        <label name="sum"/>
        <field name="sum" xexpand="0" width="25"/>
         
        <!-- Add here some checkboxes ! -->
    </group>
    <label name="vehicle_no"/>
    <field name="vehicle_no" xexpand="0" width="25"/>
    <notebook colspan="6">
        <page name="incoming_moves">
            <field name="incoming_moves" colspan="4"
                view_ids="stock.move_view_list_shipment_in"/>
        </page>
        <page name="inventory_moves">
            <field name="inventory_moves" colspan="4" view_ids="stock.move_view_list_shipment"/>
        </page>
        <page string="Other Info" id="other">
            <label name="received_by"/>
            <field name="received_by"/>
            <label name="done_by"/>
            <field name="done_by"/>
        </page>
    </notebook>
    <label name="state"/>
    <field name="state"/>
    <group col="-1" colspan="2" id="buttons">
        <button name="cancel" icon="tryton-cancel"/>
        <button name="receive" icon="tryton-forward"/>
        <button name="done" icon="tryton-ok"/>
        <button name="draft" icon="tryton-undo"/>
    </group>
</form>
